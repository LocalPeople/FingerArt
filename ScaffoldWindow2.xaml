<Window x:Class="XcWpfControlLib.WpfScaffoldControlLib.ScaffoldWindow2"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:XcWpfControlLib.WpfScaffoldControlLib"
        mc:Ignorable="d"
        Title="脚手架智能设计软件" Height="500" Width="280">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Image Source="Resources/logo2.png" 
               Stretch="Uniform" HorizontalAlignment="Left" Margin="4,4,4,8" Height="40" />

        <local:ModelingPanel x:Name="modelingPanel" Grid.Row="1" />

        <Button HorizontalAlignment="Right" Margin="12,6" Grid.Row="2" Click="Button_Click">开始建模</Button>
    </Grid>
</Window>
